{
  "name": "shape-to-query",
  "private": "true",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npx yarn-deduplicate",
    "lint": "eslint . --ext .ts --quiet --ignore-path .gitignore",
    "test:query": "c8 -o coverage/query --all --reporter=lcov mocha packages/shape-to-query/test/store.test.ts",
    "test:unit": "c8 -o coverage/unit --all --reporter=lcov mocha --recursive packages/**/*.test.ts --exclude packages/shape-to-query/test/store.test.ts",
    "test": "run-p test:*",
    "prebuild": "npm run docs",
    "build": "yarn run --cwd=packages/demo build",
    "build:spec": "docker-compose run --rm bikeshed --allow-nonlocal-files spec",
    "docs": "find packages/demo/public -type f -name index.bs -exec yarn build:spec {} \\;",
    "docs:watch": "docker-compose run --rm --publish 8000:8000 bikeshed --allow-nonlocal-files serve",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@tpluscode/eslint-config": "0.4.3",
    "@types/mocha": "^10.0.1",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "c8": "^7.13.0",
    "eslint": ">=8",
    "eslint-config-standard": ">=11",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": ">=2",
    "eslint-plugin-n": ">=15",
    "eslint-plugin-node": ">=11",
    "eslint-plugin-promise": ">=6",
    "eslint-plugin-require-extensions": ">=0.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "sinon-chai": "^3.7.0",
    "standard": ">=11",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "yarn-deduplicate": "^6.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "mocha": {
    "watch-files": [
      "./**/*.ts"
    ],
    "require": [
      "mocha-setup.cjs"
    ],
    "loader": "ts-node/esm"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix --quiet"
    ]
  }
}
