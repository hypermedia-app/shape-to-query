PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX schema: <http://schema.org/>
CONSTRUCT {
  ?resource1 rdf:type schema:Organization.
  ?resource1 <http://example.org/contact> ?resource3.
}
WHERE {
  ?resource1 rdf:type schema:Organization.
  {
    SELECT DISTINCT ?resource1 ?resource3 WHERE {
      ?resource1 (<http://example.org/customer>|<http://example.org/client>) ?resource3;
        rdf:type schema:Organization.
    }
  }
}